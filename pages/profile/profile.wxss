/* pages/profile/profile.wxss */
@import '../../dist/styles/index.wxss';

.background {
  background-color: #1B2A59;
  height: 25vh;
  border-radius: 0 0 20rpx 20rpx;
  position: relative;
  margin-bottom: 100px;
}

.profile-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 10px;
}

.h1 {
  font-size: 56rpx;
  color: white;
  font-weight: bolder;
  position: absolute;
  left: 15px;
  top: 15px;
}

.h2 {
  font-size: 40rpx;
  font-weight: bold;
}

.p {
  font-size: 0.8rem;
}


.profile-card {
  background-color: white;
  position: absolute;
  min-width: 90vw;
  /* margin: 14px; */
  height: 250rpx;
  bottom: -60px;
  box-shadow: 0 0 15rpx rgba(180,180,180,0.3);
  padding: 15px 5px;
  border-radius: 15rpx;
}
.profile-card-info {
  display: flex;
}
.profile {
  display: flex;
  justify-content: space-around;
}

/* Progress Bar */
.wx-progress-inner-bar {
  border-radius: 8rpx !important;
  background: linear-gradient(to right, #F2C1BD, #1B2A59) !important;
}

.progress-box {
  margin: 20px 0;
  width: 92%;
}

.round-progress {
  position: absolute;
  top: 10px;
  right: 10px;
}

.progress {
  display: flex;
  justify-content: space-around;
}
/* End of Progress Bar */
.mypoints {
  font-weight: bold;
  font-size: 1.7rem;
}

.total-points {
  font-size: 1rem;
  font-weight: bold;
}

.points {
  position: absolute;
  right: 15px;
}

.page-content {
  margin-top: 65px;
  padding: 0 15px;
}


.h3 {
  font-weight: bold;
  font-size: 1.2rem;
  margin-bottom: 10px;
}

/* Course cards */


.wux-circle {
  display: inline-block;
  position: relative
}
.wux-circle__inner {
  width: 100%;
  text-align: center;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translate3d(0,-50%,0);
  line-height: 1
}
.triangle{
  width: 50vw;
  height: 30vh;
  top: 0;
  position: absolute;
}
.profile-content {
  margin-left: 15px;
}

.nickname {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 200px;
}

.round-progress {
  flex-shrink: 0;
}

.course-card {
  background-color: white;
  box-shadow: 0 0 15rpx rgba(180,180,180,0.3);
  border-radius: 10rpx;
  padding: 25rpx;
  height: 100px;
  position: relative;
  margin-bottom: 5px;
}

.course-content {
  display: flex;
  justify-content: space-between;
}

.course-info {
  margin-left: 8px;
}

.course-image {
  min-width: 150rpx;
  max-height: 150rpx;
  max-width: 150rpx;
  min-height: 150rpx;
  border-radius: 10rpx;
}

.h4 {
  font-weight: bold;
  font-size: 0.9rem;
}

.btn {
  background:linear-gradient(to right, #F2C1BD, #1B2A59);
  color: white;
  text-align: center;
  width: 100px;
  padding: 5px 10px;
  border-radius: 10rpx;
  position: absolute;
  right: 15px;
  bottom: 15px;
  font-size: 0.9rem;

}

.page-content {
  margin-top: 25px;
  padding: 0 15px;
}

.descr {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 250px;
  margin-top: 10rpx;
}
.quiz-bg {
  border: 1px solid black;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  padding: 50rpx 20rpx;
  background-color: #1B2A59;
  color: white;
  transition:background-color 0.25s ease;
}

radio {
position: fixed;
opacity: 0;
pointer-events: none;
}

button {
  background: linear-gradient(to right, #F2C1BD, #1B2A59);
  color: white;
  margin-bottom: 50rpx;
}

.btn-bottom {
  margin-bottom: 20px;
}

/**index.wxss**/

/* Fonts */
.h1 {
  font-size: 56rpx;
  color: white;
  font-weight: bolder;
  position: absolute;
  left: 15px;
  top: 15px;
}


.h2 {
  font-size: 32rpx;
  font-weight: bolder;
}

.h4 {
  font-weight: bold;
  font-size: 0.9rem;
}

.p {
  font-size: 0.8rem;
}

.h3 {
  font-weight: bold;
  font-size: 1.2rem;
  margin-bottom: 10px;
}

/* End of Fonts */

.background {
  background-color: #1B2A59;
  height: 25vh;
  border-radius: 0 0 20rpx 20rpx;
  position: relative;
}

.title{
  height: 100rpx;
  font-size: large;
  color: white;
  font-weight: bold;
}

/* hero card */
.main-card {
  display: flex;
  justify-content: center;
}

.hero-course  {
  height: 350rpx;
  background: white;
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  border-radius: 20rpx;
  margin-bottom: 15rpx;
  position: relative;
  margin-top: 70px;
  width: 90vw;
  padding: 20rpx;
}
.course-content {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}

.course-text {
  margin-left: 15rpx;
}

.hero-image {
  min-height: 180rpx;
  max-height: 180rpx;
  min-width: 180rpx;
  max-width: 180rpx;
  border-radius: 20rpx;
}

/* hero content end */

/* Avatar Group */
.avatar:not(:first-child) {
  margin-left: -10rpx;
  /* -webkit-mask:radial-gradient(circle 55rpx at 5rpx 50%,transparent 99%,#fff 100%); */
  mask:radial-gradient(circle 55rpx at 5rpx 50%,transparent 99%,#fff 100%);
}
.avatar {
  display: inline-block;
  border-radius: 50%;
  overflow: hidden;
  width: 60rpx;
  height: 60rpx;
}

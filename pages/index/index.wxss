.card-product-infos {
  position: relative;
}


.btn-flat {
  color: white;
  padding: 10rpx 10rpx;
  border-radius: 10rpx;
  width: 150rpx;
  background:#1B2A59 ;
  font-size: 25rpx;
  text-align: center;
  position: absolute;
  bottom: 5px;
  right: 15px;
}

text {
  font-size: 12px;
}
/* Progress Bar */
.wx-progress-inner-bar {
  border-radius: 8rpx !important;
  background: linear-gradient(to right, #F2C1BD, #1B2A59) !important;
}

.progress-box {
  margin: 20px 0;
  width: 92%;
}

.progress {
  display: flex;
  justify-content: space-around;
}
/* End of Progress Bar */


/* Course cards */

.course-card {
  background-color: white;
  box-shadow: 0 0 15rpx rgba(180,180,180,0.3);
  border-radius: 10rpx;
  padding: 25rpx;
  height: 100px;
  position: relative;
  margin-bottom: 5px;
}

.course-content {
  display: flex;
  justify-content: space-between;
}

.course-info {
  margin-left: 8px;
}

.course-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.h4 {
  font-weight: bold;
  font-size: 0.9rem;
}

.btn {
  background-color: #1B2A59;
  color: white;
  text-align: center;
  width: 100px;
  padding: 5px 10px;
  border-radius: 10rpx;
  position: absolute;
  right: 15px;
  bottom: 15px;
  font-size: 0.9rem;

}

.page-content {
  margin-top: 25px;
  padding: 0 15px;
}

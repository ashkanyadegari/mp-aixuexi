<view class="background">
<view class="h1">Today</view>
<view class="hero">
  <view class="main-card">
    <view class="hero-course" data-id="{{courses[3].id}}">
      <view class="course-content">
        <image class='hero-image' src="{{courses[3].photos[0]}}" />
        <view class="course-text">
          <view class="h2">{{courses[3].name}}</view>
          <view class="herodiv">
          <text class="nodesc"> {{courses[3].description}}</text>
        </view>
        </view>
      </view>
      <view class="progress">
          <view class="progress-box">
              <progress percent="45" border-radius='5' stroke-width="9" activeColor="#FE564D"/>
          </view>
      </view>
      <view class="card-product-infos">
        <navigator bindtap="goToShow" data-id="{{courses[3].id}}" class="btn-flat" url="#">Continue</navigator>
        <view class="avatars">
          <span class="avatar">
            <image src="https://lewagon.oss-cn-beijing.aliyuncs.com/photo-1491349174775-aaafddd81942.jpeg"/>
          </span>

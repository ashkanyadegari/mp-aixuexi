/* Submit Company */

.login {
  margin-top: 250rpx;
}

.input {
  width: 90vw;
  background-color: white;
  padding: 20rpx 10rpx;
  box-shadow: 0 0 15rpx rgba(180,180,180,0.3);
  border-radius: 15rpx;
}

.form {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
button {
  margin-top: 20rpx;
  background:linear-gradient(to right, #F2C1BD, #1B2A59);
  color: white;
}

/* End of Submit Company */

